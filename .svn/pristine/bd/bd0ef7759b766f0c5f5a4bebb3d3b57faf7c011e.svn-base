
 /* Constants*/
 .text-shadow {text-shadow: 1px 1px #000;}

 .views-field-field-banner img {
    height:240px;
    width:auto;
    z-index: -1;
    }
    
#views_slideshow_cycle_main_slideshow_banner-block {width: 100%;}
.views-slideshow-pager-field-item {
    color: #fff;
    float:left;
    width: 20px;
}



.views-slideshow-pager-field-item {
    color: #fff;
    float: left;
    margin-right: 4px;
    width: 20px;
}

#widget_pager_bottom_slideshow_banner-block .views-content-counter {
    background: @white;
    cursor: pointer;
    height: 15px;
    .border-radius(10px);
    .box-shadow(1px 1px 0px #000);
    text-indent: -99999px;
    width: 15px;
    margin: 0 auto;
}

#widget_pager_bottom_slideshow_banner-block .active .views-content-counter {background: #b5afa9;}

#widget_pager_bottom_slideshow_banner-block {
    margin: 0 auto;
    width: 80px;
}

.banner-description a {
  .font-size(28px);
  color:@white;
}

.banner-description a:hover {text-decoration: none;}

