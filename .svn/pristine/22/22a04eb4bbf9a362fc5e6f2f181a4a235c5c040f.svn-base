@media only screen and (min-width: 600px) {
  /* ----------------------
    HOMEPAGE BANNER
    ---------------------- */
  #views_slideshow_cycle_main_slideshow_banner-block {
    width: 100%;
    position: relative;
  }
  .views-slideshow-cycle-main-frame-row {
    width: 100%;
  }
  #views_slideshow_cycle_main_slideshow_banner-block .views-field-field-banner {
    float: right;
    height: 240px;
    width: 50%;
  }
  #views_slideshow_cycle_main_slideshow_banner-block .views-field-field-description {
    font-size: 1.25em;
    float: left;
    margin: 0 0 0 30px;
    text-shadow: 1px 1px #000;
    width: 30%;
  }
  #views_slideshow_cycle_main_slideshow_banner-block .views-field-title {
    font-size: 1.375em;
    font-weight: bold;
    margin: 0 0 20px 30px;
    padding-top: 30px;
    text-shadow: 1px 1px #000;
    width: 50%;
  }
  #views_slideshow_cycle_div_slideshow_banner-block_0 .views-slideshow-cycle-main-frame-row-item,
  #views_slideshow_cycle_div_slideshow_banner-block_1 .views-slideshow-cycle-main-frame-row-item,
  #views_slideshow_cycle_div_slideshow_banner-block_2 .views-slideshow-cycle-main-frame-row-item,
  #views_slideshow_cycle_div_slideshow_banner-block_3 .views-slideshow-cycle-main-frame-row-item,
  #views_slideshow_cycle_div_slideshow_banner-block_4 .views-slideshow-cycle-main-frame-row-item,
  #views_slideshow_cycle_div_slideshow_banner-block_5 .views-slideshow-cycle-main-frame-row-item {
    background: url(images/inner-shadow.png) no-repeat;
    position: relative;
    z-index: 100;
    height: 240px;
  }
  #views_slideshow_cycle_div_slideshow_banner-block_0 .views-row,
  #views_slideshow_cycle_div_slideshow_banner-block_4 .views-row {
    background-color: #6cace4;
  }
  #views_slideshow_cycle_div_slideshow_banner-block_1 .views-row,
  #views_slideshow_cycle_div_slideshow_banner-block_5 .views-row {
    background-color: #7a9a01;
  }
  #views_slideshow_cycle_div_slideshow_banner-block_2 .views-row {
    background-color: #d38235;
  }
  #views_slideshow_cycle_div_slideshow_banner-block_3 .views-row {
    background-color: #a192b2;
  }
  #views_slideshow_cycle_main_slideshow_banner-block .views-field-body a,
  #views_slideshow_cycle_main_slideshow_banner-block .views-field-title a {
    color: #fff;
  }
  #views_slideshow_cycle_main_slideshow_banner-block .views-field-body a:hover,
  #views_slideshow_cycle_main_slideshow_banner-block .views-field-title a:hover {
    color: #efecec;
  }
  .views-slideshow-controls-bottom {
    position: absolute;
    bottom: 20px;
    right: 20px;
    z-index: 500;
  }
}
