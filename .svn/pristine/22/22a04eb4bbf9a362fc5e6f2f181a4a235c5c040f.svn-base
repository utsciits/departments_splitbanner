.views-field-field-banner img {
  height: 240px;
  width: auto;
  z-index: -1;
}
#views_slideshow_cycle_main_slideshow_banner-block {
  width: 100%;
}
.views-slideshow-pager-field-item {
  color: #fff;
  float: left;
  width: 20px;
}
.views-slideshow-pager-field-item {
  color: #fff;
  float: left;
  margin-right: 4px;
  width: 20px;
}
#widget_pager_bottom_slideshow_banner-block .views-content-counter {
  background: #fff;
  cursor: pointer;
  height: 15px;
  border-radius: 10px;
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  box-shadow: 1px 1px 0px #000;
  -webkit-box-shadow: 1px 1px 0px #000;
  -moz-box-shadow: 1px 1px 0px #000;
  text-indent: -99999px;
  width: 15px;
}
#widget_pager_bottom_slideshow_banner-block .active .views-content-counter {
  background: #b5afa9;
}
