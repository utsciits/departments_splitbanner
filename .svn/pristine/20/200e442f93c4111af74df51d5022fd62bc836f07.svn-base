///////////////////////////////
// Images

// Border on pages' feature images
.field-type-image img {
  .box-shadow( @pageImageBorderShadow );
  border-color: @pageImageBorderColor;
  border-width: @pageImageBorderWidth;
  border-style: @pageImageBorderStyle;
}

// No border on images in teasers
.teaser {
  .field-type-image img {
    .box-shadow( none );
    border: none;
  }
}

