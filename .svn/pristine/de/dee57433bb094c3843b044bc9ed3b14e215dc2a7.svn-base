@media only screen and (min-width: 600px) {
  /* TOP MENU */
  #menu-bar {
    background: #fff;
    border-bottom: 1px solid #002554;
    height: 40px;
    padding-left: 0;
  }
  #menu-bar ul li {
    float: left;
  }
  #menu-bar a {
    color: #002554;
    display: block;
    font-weight: bold;
    line-height: 20px;
    padding: 12px 12px 8px 12px;
  }
  #menu-bar a.active,
  #menu-bar .active-trail {
    background: #bfb800;
  }
  #menu-bar #menu-284-1 a {
    background: url(image/home_btn_20x50.png) no-repeat 10px 10px;
    text-indent: -99999px;
    width: 19px;
  }
  #menu-bar #menu-284-1 a:hover {
    background: url(image/home_btn_20x50.png) no-repeat 10px 10px;
    text-indent: -99999px;
    width: 19px;
  }
  #menu-bar #menu-284-1 a.active {
    background: url(image/home_btn_20x50.png) no-repeat 10px 10px;
    text-indent: -99999px;
    width: 19px;
  }
  #menu-bar ul li ul li {
    border-bottom: 1px solid #efebc6;
  }
}
