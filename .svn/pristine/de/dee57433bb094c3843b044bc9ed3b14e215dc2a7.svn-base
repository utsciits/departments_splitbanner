.field-type-image img {
  -webkit-box-shadow: 0px 0px 10px #666666;
  -moz-box-shadow: 0px 0px 10px #666666;
  box-shadow: 0px 0px 10px #666666;
  border-color: #ffffff;
  border-width: 5px;
  border-style: solid;
}
.teaser .field-type-image img {
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;
  border: none;
}
.field-name-field-image img,
.field-name-field-list-page-image img,
.field-name-field-page-image img {
  width: 99%;
}
.teaser .field-name-field-building,
.teaser .field-name-field-building div,
.teaser .field-name-field-room,
.teaser .field-name-field-room div {
  display: inline;
}
.field-name-field-page-list .odd {
  background-color: #e6e4e2;
}
