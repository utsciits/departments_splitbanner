.mainMenu {
  color: #002554;
  display: block;
  font-weight: bold;
}
html {
  font-size: 62.5%;
}
body {
  font-size: 15px;
  font-size: 1.5rem;
  background-color: #f4f4f4;
  color: #333333;
  font-family: sans-serif;
}
h1,
h2,
h3,
h4,
h5,
h6 {
  color: #002554;
  font-family: "Trebuchet MS", sans-serif;
  font-weight: normal;
}
a {
  color: #4d6d92;
  text-decoration: none;
}
a:hover,
a:focus {
  color: #002554;
  text-decoration: underline;
}
a:visited {
  color: #334860;
}
.teaser {
  margin-bottom: 10px;
  margin-top: 10px;
  border: 1px solid red;
}
.teaser .article-content {
  margin: 10px;
}
.teaser .field-type-image {
  float: left;
  margin-right: 10px;
}
.teaser .article-title {
  border-bottom: 1px solid #cccccc;
  margin-bottom: 10px;
  padding-bottom: 10px;
}
.teaser p:first-of-type {
  margin-top: 0;
}
